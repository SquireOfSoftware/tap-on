{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "An API gateway for the People Project",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -k npm:dev:*",
    "dev:films": "nodemon -r esm ./films/index.js",
    "dev:gateway": "wait-on tcp:4002 && nodemon -r esm ./index.js"
  },
  "dependencies": {
    "@apollo/federation": "^0.25.1",
    "@apollo/gateway": "^0.28.2",
    "apollo-server": "^2.14.2",
    "concurrently": "^5.1.0",
    "esm": "^3.2.25",
    "graphql": "^15.0.0",
    "nodemon": "^2.0.2",
    "wait-on": "^4.0.1"
  }
}
